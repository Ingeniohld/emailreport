<odoo>
  <data>
    <!-- explicit list view definition -->

    <record model="ir.ui.view" id="standard_reports_list">
      <field name="name">standard_reports_list</field>
      <field name="model">standard.reports</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="value"/>
          <field name="value2"/>
        </tree>
      </field>
    </record>


    <!-- actions opening views on models -->

    <record model="ir.actions.act_window" id="standard_reports_action_window">
      <field name="name">standard_reports_window</field>
      <field name="res_model">standard.reports</field>
      <field name="view_mode">tree,form</field>
    </record>


    <!-- server action to the one above -->

    <record model="ir.actions.server" id="standard_reports.action_server">
      <field name="name">standard_reports_server</field>
      <field name="model_id" ref="model_standard_reports_standard_reports"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": model._name,
        }
      </field>
    </record>


    <!-- Top menu item -->

    <menuitem name="Standard Reports" id="standard_reports_menu_root"/>

    <!-- menu categories -->

    <menuitem name="Report 1" id="standard_reports_menu_1" parent="standard_reports.menu_root"/>

    <!-- actions -->

    <menuitem name="List" id="standard_reports_menu_1_list" parent="standard_reports_menu_1"
              action="standard_reports_action_window"/>
<!--     <menuitem name="Server to list" id="standard_reports" parent="standard_reports.menu_2"
              action="standard_reports.action_server"/> -->

  </data>
</odoo>